{
  "name": "safe-number",
  "version": "1.0.0",
  "description": "Type-Safe BigInt Utility Library",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepublishOnly": "pnpm run lint && pnpm run test && pnpm run build",
    "prepare": "husky"
  },
  "keywords": [
    "bigint",
    "math",
    "utility",
    "typescript"
  ],
  "author": "min-99",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  },
  "lint-staged": {
    "**/*.{ts,js,json,md}": [
      "prettier --write"
    ],
    "**/*.{ts,js}": [
      "eslint --fix --max-warnings=0"
    ]
  }
}
